{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {

        /*##########################Network details############################*/
        "vnetresourcegroupname": {
            "type": "string",
            "metadata": {
                "description": "name of existing vnet resource group"
            }
        },
        "vnetname": {
            "type": "string",
            "metadata": {
                "description": "name of existing vnet"
            }


        },
        "subnetname": {
            "type": "string",
            "metadata": {
                "description": "name of existing subnet name"
            }
        }
    },
    "functions": [],
    "variables": {
     
    
    },
    "resources": [
        {
            "name": "networkInterface1",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "networkInterface1"
            },
            
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipConfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[resourceId(parameters('vnetresourcegroupname'),'Microsoft.Network/virtualNetworks/subnets',parameters('vnetname'), parameters('subnetname'))]"
                                
                                
                            }
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {

        "Resourcegrouplocation": {
            "type": "string",
            "value": "[resourceGroup().location]"
        },
        "vnetresourcegroupname": {
            "type": "string",
            "value": "[parameters('vnetresourcegroupname')]"
        },
    "vnetname": {
            "type": "string",
            "value": "[parameters('vnetname')]"
    },
    "subnetname": {
            "type": "string",
            "value": "[parameters('subnetname')]"


        }
    }
}
